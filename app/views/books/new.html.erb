<h1>New</h1>
<%= form_for @book, url: {action: "create"} do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
    <br>
    <%= f.label "Author" %>
    <%= f.text_field :author %>
    <br>
    <%= f.label "Rating" %>
    <%= f.range_field :rating, min: 0, max: 10 %>
    <br>
    <%= f.submit %>
<% end %>
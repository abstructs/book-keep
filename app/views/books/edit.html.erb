<h1>Edit</h1>
<%= form_for @book, url: {action: "update"} do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
    <br>
    <%= f.label "Author" %>
    <%= f.text_field :author %>
    <br>
    <%= f.label "Descripton" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>
<% end %>

